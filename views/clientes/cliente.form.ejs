<div class="container">
    <div class="section has-text-centered">
        <h1 class="is-size-3">Clientes</h1>
        <br>
        <div class="table-container">
            <table class="table is-hoverable is-fullwidth">
                <col style="width: 20%">
                <col style="width: 60%">
                <col style="width: 20%">
                <thead>
                    <tr>
                        <th class="has-text-centered">RFC</th>
                        <th class="has-text-centered">Razón Social</th>
                        <th class="has-text-centered">Teléfono</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let i of clientes) { %> 
                        <tr>
                            <td><%= i.rfc %></td>
                            <td><%= i.razonsocial %></td>
                            <td><%= i.telefono %></td>
                            <% if (permisos.indexOf('eliminacliente') != -1) { %>
                            <td><a class="fas fa-pen" href="/clientes/edit/<%= i.usuario %>"></a></td>
                            <% } %>
                            <% if (permisos.indexOf('eliminacliente') != -1) { %>
                            <td><a class="fas fa-trash" href="#" onclick="if (confirm('¿Está seguro que desea eliminar el elemento?')) window.location = '/clientes/<%= i.usuario %>'"></a></td>
                            <% } %>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
        <br>
        <% if (permisos.indexOf('registracliente') != -1) { %>
        <button data-target="modal-cliente" class="js-modal-trigger button is-info">Agregar</button>
        <% }%>
        <% if (info != '') { %>
            <span data-target="modal-cliente" class="js-modal-open"></span>
        <% } %>
    </div>
</div>