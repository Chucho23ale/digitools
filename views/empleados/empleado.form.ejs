<div class="container">
    <div class="section has-text-centered">
        <h1 class="is-size-3">Empleados</h1>
        <br>
        <div class="table-container">
            <table class="table is-hoverable is-fullwidth">
                <col style="width: 20%">
                <col style="width: 60%">
                <col style="width: 20%">
                <thead>
                    <tr>
                        <th class="has-text-centered">Usuario</th>
                        <th class="has-text-centered">Rol</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let i of empleados) { %> 
                        <tr>
                            <td><%= i.usuario %></td>
                            <td><%= i.nombre %></td>
                            <% if (permisos.indexOf('eliminar') != -1) { %>
                            <td><a class="fas fa-trash" href="#" onclick="if (confirm('¿Está seguro que desea eliminar el elemento?')) window.location = '/empleados/<%= i.usuario %>'"></a></td>
                            <% } %>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
        <br>
        <button data-target="modal-empleado" class="js-modal-trigger button is-info">Agregar</button>
        <% if (info != '') { %>
            <span data-target="modal-empleado" class="js-modal-open"></span>
        <% } %>
    </div>
</div>