<div class="modal" id="modal-edit-desc">
    <div class="modal-background"></div>
    <div class="modal-content">
        <div class="box">
            <div class="has-text-right">
                <button class="delete close"></button>
            </div>
            <p class="is-size-3 has-text-centered pt-0 mt-0 pb-3">Editar Ticket</p>
            <form action="/incidencias/edit/<%= ticket.idticket %>" method="post">
                <div class="field">
                    <label class="label">Descripcion</label>
                    <p class="control">
                        <input value="<%= descripcion.descripcion %>" name="descripcion" class="input" type="textarea" required>
                    </p>
                </div>
                <br>
                <div class="field  is-grouped is-grouped-centered">
                    <div class="control">
                        <input type="submit" class="button is-info" id="enviar" name="enviar" value="Registrar">
                    </div>
                </div>   
            </form> 
        </div>
    </div>
</div>