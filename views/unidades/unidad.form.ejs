<div class="cointainer">
    <div class="section has-text-centered">
        <h1 class="is-size-3">Unidades</h1>
        <br>
        <div class="table-container">
            <table class="table is-hoverable is-fullwidth">
                <col style="width: 20%">
                <col style="width: 60%">
                <col style="width: 20%">
                <thead>
                    <tr>
                        <th class="has-text-centered">IMEI</th>
                        <th class="has-text-centered">Nombre</th>
                        <th class="has-text-centered">Cliente</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let i of unidades) { %>
                        <tr>
                            <td><%= i.imei %></td>
                            <td><%= i.nombre %></td>
                            <td><%= i.razonsocial %></td>
                            <% if (permisos.indexOf('editaunidad') != -1) { %>
                            <td><a class="fas fa-pen" href="/unidades/edit/<%= i.imei %>"></a></td>
                            <% } %>
                            <% if (permisos.indexOf('eliminar') != -1) { %>
                                <td><a class="fas fa-trash" href="#" onclick="if (confirm('¿Está seguro que desea eliminar el elemento?')) window.location = '/unidades/<%= i.imei %>'"></a></td>
                            <% } %>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
        <br>
        <% if (permisos.indexOf('agregaunidad') != -1) { %>
        <button data-target="modal-unidad" class="js-modal-trigger button is-info">Agregar</button>
        <% } %>
        <% if (info != '') { %>
            <span data-target="modal-unidad" class="js-modal-open"></span>
        <% } %>
    </div>
</div>